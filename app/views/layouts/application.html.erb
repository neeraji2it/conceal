          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
              <% if params[:controller] == "users" and (params[:action] == "new" or params[:action] == "create") or (params[:controller] == "payments" and params[:action] == "new" or params[:action] == "create") %>
                <li class="active"><a href="/users/">Home</a></li>
              <% else %>
                <li class="active"><a href="#start">Start</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#services">Services</a></li>
                <li><%= link_to "signup", new_user_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
      <!-- / navbar -->

      <%= yield %>
      <footer>
        <div class="container postfooter">
          <div class="row">
            <aside class="col-md-6 widget">
              <p style="color:#FEFEFE;">Conceal Alert and Mayday Alarm Â©2014 PATENT-PENDING</p>
            </aside>
